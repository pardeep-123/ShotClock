<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_30sdp"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civUser"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/img_signup" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/proxima_semibold"
            android:gravity="center"
            android:text="@string/james_jackson"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_12ssp"
            android:layout_below="@+id/civUser"
              />

        <ImageView
            android:layout_below="@+id/tvUserName"
            android:id="@+id/iv_fb"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/iv_insta"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_fb"/>

        <ImageView
            android:layout_below="@+id/tvUserName"
            android:id="@+id/iv_insta"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_insta" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>